<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/todoIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/todo_icon"
        android:contentDescription="@string/todo_icon_description" />

    <TextView
        android:id="@+id/todoAppText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/todoIcon"
        android:layout_marginTop="16dp"
        android:text="Todo App"
        android:textColor="@android:color/white"
        android:textSize="30sp"

        android:textStyle="bold" />


    <!-- Add any additional views or branding elements for your splash screen -->

</RelativeLayout>

